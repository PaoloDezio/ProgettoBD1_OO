/* Creazione della tabella CORSO 

CREATE TABLE CORSO(
	Codice_Corso VARCHAR(10) PRIMARY KEY,
	Nome VARCHAR(15) NOT NULL,
	Descrizione VARCHAR(30),
	Max_Partecipanti INT NOT NULL,
	Num_Lezioni INT,
	Presenze_Min FLOAT
);



CREATE TABLE LEZIONE (
	Codice_Lezione VARCHAR(10) PRIMARY KEY,
	Titolo VARCHAR(16),
	Descrizione VARCHAR(32),
	Durata INTERVAL,
	Data_Ora_Inizio TIMESTAMP,
	Codice_Corso VARCHAR(10),
	FOREIGN KEY(Codice_Corso) REFERENCES CORSO(Codice_Corso)
);

CREATE TABLE STUDENTE(
	Matricola CHAR(9) PRIMARY KEY,
	Nome VARCHAR(15) NOT NULL,
	Cognome VARCHAR(15) NOT NULL,
	Luogo_Nascita VARCHAR(15),
	Data_Nascita DATE
);

CREATE TABLE AREA_TEMATICA(
	Categoria VARCHAR(15) PRIMARY KEY
);

CREATE TABLE ISCRIZIONE(
	Codice_Corso VARCHAR(10),
	Matricola VARCHAR(10),
	FOREIGN KEY(Codice_Corso) REFERENCES CORSO(Codice_Corso),
	FOREIGN KEY(Matricola) REFERENCES STUDENTE(Matricola)
);
*/
/* Vincolo di CorsoUnico */
ALTER TABLE ISCRIZIONE ADD
CONSTRAINT CorsoUnico UNIQUE(Codice_Corso,Matricola);


/*
CREATE TABLE PARTECIPARE(
	Codice_Lezione VARCHAR(10),
	Matricola VARCHAR(10),
	Presenza BOOLEAN,
	FOREIGN KEY(Codice_Lezione) REFERENCES LEZIONE(Codice_Lezione),
	FOREIGN KEY(Matricola) REFERENCES STUDENTE(Matricola)
);*/

/* Vincolo di LezioneUnica */
ALTER TABLE PARTECIPARE ADD
CONSTRAINT LezioneUnica UNIQUE(Codice_Lezione,Matricola); 

